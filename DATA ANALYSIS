--Count the number of employees by city

SELECT City, COUNT(*) AS NumberOfEmployees
FROM Employee
GROUP BY City;

-- This query counts the number of employees in each city and groups the results by city name.

--Find the average age of employees in each payment tier

SELECT PaymentTier, AVG(Age) AS AverageAge
FROM Employee
GROUP BY PaymentTier;

--This query calculates the average age of employees within each payment tier and groups the results by payment tier.

--Count the number of employees by gender and city

SELECT City, Gender, COUNT(*) AS NumberOfEmployees
FROM Employee
GROUP BY City, Gender;

--This query counts the number of employees for each combination of city and gender, grouping the results by both city and gender.

--Calculate the average experience in the current domain for employees who have been benched

SELECT AVG(ExperienceInCurrentDomain) AS AverageExperience
FROM Employee
WHERE EverBenched = 'Yes';

--This query calculates the average experience in the current domain for employees who have been benched.

--Retrieve the distribution of education levels among employees

SELECT Education, COUNT(*) AS NumberOfEmployees
FROM Employee
GROUP BY Education;

--This query counts the number of employees at each education level and groups the results by education level.

--Calculate the percentage of employees who have left the company

SELECT (COUNT(*) * 100.0 / (SELECT COUNT(*) FROM Employee)) AS PercentageLeft
FROM Employee
WHERE LeaveOrNot = 1;

--This query calculates the percentage of employees who have left the company by dividing the number of employees who have left by the total number of employees and multiplying by 100.

--Find the maximum and minimum age of employees in each city

SELECT City, MAX(Age) AS MaxAge, MIN(Age) AS MinAge
FROM Employee
GROUP BY City;

--This query finds the maximum and minimum age of employees in each city and groups the results by city.

--Calculate the average age of employees by education level

SELECT Education, AVG(Age) AS AverageAge
FROM Employee
GROUP BY Education;

--This query calculates the average age of employees at each education level and groups the results by education level.

--Count the number of employees who joined in each year

SELECT JoiningYear, COUNT(*) AS NumberOfEmployees
FROM Employee
GROUP BY JoiningYear;

--This query counts the number of employees who joined the company in each year and groups the results by joining year.

--Find the number of employees in each payment tier by education level

SELECT Education, PaymentTier, COUNT(*) AS NumberOfEmployees
FROM Employee
GROUP BY Education, PaymentTier;

--This query counts the number of employees at each combination of education level and payment tier, grouping the results by both education level and payment tier.
